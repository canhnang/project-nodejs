<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form method="POST" action="login/verify" name="formLogin">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" class="form-control" placeholder="User Name" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
                <button type="submit" id="btn-login" class="btn btn-black">Login</button>
                <a href="register" class="btn btn-secondary">Register</a>
            </form>
        </div>
    </div>
</div>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        var userName = $('input[name="email"]');
        var password = $('input[name="password"]');
        var btnLogin = $('#btn-login');
        var formLogin = document.forms.formLogin;

        btnLogin.click(function (e) {
            e.preventDefault();
            if (userName.val() === '' || password.val() === '') {
                alert('Vui lòng nhập đầy đủ tên đăng nhập và mật khẩu!');
                return;
            }
            formLogin.submit();
        })

    })
</script>